<h2><%= t('.title_html') %></h2>
<table>
  <%= render cart.line_items %>

  <tr class="total_line">
    <td colspan="2">Total</td>
    <td class="total_cell"><%= number_to_currency(currency_converter(I18n.locale, cart.total_price) )%></td>
  </tr>
</table>

<%= button_to t('.checkout'), new_order_path, method: :get %>
<%= button_to t('.empty_html'), cart, method: :delete, data: { confirm: t('.confirm_html')  } %>